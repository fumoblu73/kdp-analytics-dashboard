{
  "manifest_version": 3,
  "name": "KDP Analytics Pro - Rainbook Editions",
  "version": "2.0.0",
  "description": "Estrazione automatica dati Amazon KDP per Rainbook Editions",
  
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "background"
  ],
  
  "host_permissions": [
    "https://kdpreports.amazon.com/*",
    "https://kdp.amazon.com/*",
    "https://advertising.amazon.com/*",
    "https://*.amazon.com/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.it/*",
    "https://*.amazon.es/*",
    "https://kdp-analytics-dashboard.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://kdpreports.amazon.com/*",
        "https://kdp.amazon.com/*",
        "https://advertising.amazon.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "KDP Analytics Pro - Rainbook Editions"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}