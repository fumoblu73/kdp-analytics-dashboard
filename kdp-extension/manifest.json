{
  "manifest_version": 3,
  "name": "KDP Analytics Extension",
  "version": "1.0",
  "description": "Automatically sync Amazon KDP data with your personal analytics dashboard",
  
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "background"
  ],
  
  "host_permissions": [
    "https://kdpreports.amazon.com/*",
    "https://kdp.amazon.com/*",
    "https://advertising.amazon.com/*",
    "https://kdp-analytics-dashboard.vercel.app/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://kdpreports.amazon.com/*",
        "https://kdp.amazon.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "KDP Analytics Sync"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://kdpreports.amazon.com/*"]
    }
  ]
}